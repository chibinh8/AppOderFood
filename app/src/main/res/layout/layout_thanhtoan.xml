<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/holo_green_dark"
    android:id="@+id/frlheader"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên món ăn"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/KhungDKPad"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá Tiền"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/KhungDKPad"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
</FrameLayout>

<GridView
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_below="@+id/frlheader"
    android:numColumns="1"
    android:id="@+id/grvdsthanhtoan"
    >

</GridView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/grvdsthanhtoan"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="@dimen/KhungDKPad"
    android:text="Tổng tiền"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:textSize="20dp"
    android:id="@+id/tvtongtien"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvtongtien"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:layout_margin="@dimen/KhungDKPad"
            android:id="@+id/btnthanhtoan"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:layout_margin="@dimen/KhungDKPad"
            android:id="@+id/btnthoat"
            />
    </LinearLayout>

</RelativeLayout>